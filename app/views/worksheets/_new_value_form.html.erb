<%= simple_form_for(@value, url: values_path, method: :post, remote: true) do |f| %>

	<%= f.input :content, label: 'Value:', label_html: { class: 'sr-only' }, placeholder: 'e.g. Managers hoard power and resources because individual unit performance is paramount.' %>
	
	<%= f.hidden_field :temporary_worksheet_code, value: @temporary_worksheet_code %>
	<%= f.button :submit, 'Add This Behavior', class: 'btn btn-primary' %>

<% end %>